{% extends 'menu.html.twig' %}

{% block title %} Hello ReactController!
{% endblock %}

{% block body %}

    <a href="/api/1">Ligue 1</a>
    <a href="/api/4">Ligue 2</a>
    <a href="/api/6">Champions League</a>
    <a href="/api/13">Europa League</a>
    <a href="/api/14">Europa Conference League</a>

    <h1>Classement de la Champions League (J{{ weekNumber }})</h1>

    <div class="journées">
        {% for match in journees.currentMatches %}
            <div {{ react_component('Matches', {'match': match}) }}></div>
        {% endfor %}
    </div>

    <div id="app">
        <h2>Équipes</h2>
        <div id="classement">
            <div id="barTop">
                <div class="club-info top-bar">
                    <div class="rank">#</div>
                    Clubs
                </div>
                <div class="points-info top-bar">
                    <p>J</p>
                    <p>pts</p>
                    <p>G</p>
                    <p>N</p>
                    <p>P</p>
                    <p>Diff</p>
                    <p>But +</p>
                    <p>But -</p>
                </div>
                <div class="recent-results top-bar">
                    <p>Forme</p>
                </div>
            </div>
            <div id="clubs">
                {% for team in teams.standings %}
                    <div {{ react_component('Team', {'team': team, 'allTeams': teams, 'previous': previousClassement}) }}></div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
